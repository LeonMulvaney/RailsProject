<p id="notice"><%= notice %></p>

<h1>Visits</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Infection injury</th>
      <th>Visit description</th>
      <th>Special observations</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= visit.date %></td>
        <td><%= visit.infection_injury %></td>
        <td><%= visit.visit_description %></td>
        <td><%= visit.special_observations %></td>
        <td><%= visit.patient.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

