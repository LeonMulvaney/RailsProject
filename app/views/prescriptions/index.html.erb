<%= link_to image_tag("back.png", class: "img-responsive"), root_path %>
<p id="notice"><%= notice %></p>

<h1>Prescriptions</h1>

<table class = "table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Patient</th>
      <th>Medication</th>
      <th>Strength</th>
      <th>Frequency</th>
      <th>Duration (Days)</th>
      <th>Special instructions</th>
      <th>Follow up</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prescriptions.each do |prescription| %>
      <tr>
        <td><%= Date.parse(prescription.date).strftime("%d/%m/%Y")%></td>
        <td><%= prescription.patient_name %></td>
        <td><%= prescription.medication_name %></td>
        <td><%= prescription.strength %></td>
        <td><%= prescription.frequency %></td>
        <td><%= prescription.duration %></td>
        <td><%= prescription.special_instructions %></td>
        <td><%= prescription.follow_up %></td>
        <td><%= link_to 'Show', prescription %></td>
        <td><%= link_to 'Edit', edit_prescription_path(prescription) %></td>
        <td><%= link_to 'Destroy', prescription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prescription', new_prescription_path %>
